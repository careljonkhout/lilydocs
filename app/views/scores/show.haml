%div#great_image_wrapper
:javascript
  document.observe("dom:loaded", function() {
    handleRemote(document.form)
  });

= form_for @score, :remote => true, :html => {:name => 'form'} do |f|
  %p
    = f.submit 'Run Lilypond', :class => 'run_lilypond'
    %br
    - if @score.class == Score
      = f.label :name
      = f.text_field :name, :class => 'form_element'
      %br
    = f.text_area :input, :rows => 50, :class => 'form_element'
    %br
    = f.submit 'Run Lilypond', :class => 'run_lilypond'
